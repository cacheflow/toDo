<% @my_tasks = current_user.tasks.where(completed: false) %>
<% @my_tasks.each do |task| %>
  <%= bootstrap_form_for [current_user, task] do |f| %>
    <div class="col-md-6 col-md-offset-2">
      <%= task.item %> 
    </div>
    <div class="col-md-3">
      <%= link_to "Edit this task", edit_task_path(task.id), class: "btn btn-default" %> 
      <%= link_to "Delete this task", task_path(task.id), class: "btn btn-default", method: :delete %> 
        <%= f.hidden_field :completed, value: true %> 
        <%= f.submit 'mark as completed', class: "btn btn-success" %>
      </div>
  <% end %>
<% end %>
