<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
       <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2><%= @user.name %> </h2>
                    <p><strong>Email: </strong> <%= @user.email %>  </p>
                      <% if current_user?(@user)%> 
                       <%= link_to "Edit my profile", edit_user_path(@user) %> 
                      <% end %>  
                </div>             
                <div class="col-xs-12 col-sm-4 text-center">
                  <span id ="profile_img">  <%= image_tag @user.avatar(:medium) %> </span>
                </div>
            </div>            
            <div class="col-xs-12 divider text-center">
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong> <% @user.tasks.count %>  </strong></h2>                    
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong><%= @user.tasks.count %> </strong></h2>                    
                    <%= link_to "Tasks", tasks_path(@user) %> <button class="btn btn-info btn-block"><span class="fa fa-@user"></span> Tasks  </button>
                </div>
            </div>
       </div>                 
    </div>
  </div>
</div>